generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Mesa {
  id         Int       @id @default(autoincrement())
  numero     Int       @unique
  capacidade Int
  reservas   Reserva[] // relação 1:N
}

model Reserva {
  id        Int      @id @default(autoincrement())
  nome      String
  data      DateTime
  hora      String
  pessoas   Int
  mesaId    Int
  mesa      Mesa     @relation(fields: [mesaId], references: [id])
  createdAt DateTime @default(now())
}

model CardapioItem {
  id        Int     @id @default(autoincrement())
  nome      String
  descricao String
  preco     Float
  imagem    String?
}
